{
  "name": "Task",
  "type": "object",
  "properties": {
    "group_id": {
      "type": "string"
    },
    "teacher_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "assigned_to": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Student IDs assigned to this task"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "completed",
        "overdue"
      ],
      "default": "pending"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "default": "medium"
    },
    "completion_note": {
      "type": "string"
    }
  },
  "required": [
    "group_id",
    "teacher_id",
    "title"
  ]
}